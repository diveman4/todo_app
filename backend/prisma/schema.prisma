generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Priority {
  HIGH
  MEDIUM
  LOW
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)

  description String?
  dueDate DateTime?
  priority Priority @default(MEDIUM)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}